<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NodeSpinner">
        <attr name="dropdownHeight" format="dimension"/>
        <attr name="dropdownWidth" format="dimension"/>
        <attr name="dropdownDivideDecoration" format="reference"/>
        <attr name="dropdownDivideHeight" format="dimension"/>
        <attr name="dropdownOddBackgroundColor" format="color"/>
        <attr name="dropdownEvenBackgroundColor" format="color"/>
        <attr name="dropdownOddTextColor" format="color"/>
        <attr name="dropdownEvenTextColor" format="color"/>
        <attr name="dropdownAnimation" format="enum">
            <enum name="dropdown" value="0"/>
            <enum name="fade" value="1"/>
            <enum name="bounce" value="2"/>
            <enum name="normal" value="3"/>
        </attr>
        <attr name="dropdownAnimationDuration" format="integer"/>
        <attr name="itemArrayList" format="reference"/>
        <attr name="spinnerBackground" format="reference|color"/>
        <attr name="spinnerTextColor" format="color"/>
        <attr name="spinnerTextSize" format="dimension"/>
        <attr name="spinnerArrowIcon" format="reference"/>
        <attr name="spinnerArrowIconTint" format="color"/>
        <attr name="spinnerArrowPadding" format="dimension"/>
        <attr name="spinnerArrowGravity" format="enum">
            <enum name="start" value="0"/>
            <enum name="top" value="1"/>
            <enum name="end" value="2"/>
            <enum name="bottom" value="3"/>
            <enum name="center" value ="4"/>
        </attr>
    </declare-styleable>
    <style name="DropDown_NodeSpinner">
        <item name="android:windowEnterAnimation">@anim/show_down_center</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="Elastic_NodeSpinner">
        <item name="android:windowEnterAnimation">@anim/elastic_down</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="Fade_NodeSpinner">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>