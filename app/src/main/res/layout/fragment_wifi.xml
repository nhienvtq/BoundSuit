<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WifiFragment">


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/wifiSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="180sp"
            android:checked="true"
            android:enabled="true"
            android:minWidth="30dp"
            android:text="Wifi"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:switchMinWidth="150sp"
            android:thumb="@drawable/wifiswitch_thumblayout"
            app:track="@drawable/wifiswitch_tracklayout"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <ImageView
            android:id="@+id/wifiimageView"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_wifi"
            android:alpha="1"
            app:layout_constraintBottom_toTopOf="@+id/wifiSwitch"
            app:layout_constraintEnd_toEndOf="@+id/wifiSwitch"
            app:layout_constraintStart_toStartOf="@+id/wifiSwitch"
            app:tint="@color/colorAccent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>